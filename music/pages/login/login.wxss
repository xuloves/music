/* pages/login/login.wxss */

page {
  background-color: #1e1d1f;
}

.login-container {
  margin-top: 32rpx;
  background-color: #1e1d1f;
}

.login-container .input-area {
  display: flex;
  padding: 24rpx;
  border-bottom: 1px solid #2D2C30;
}

.login-container .input-area .image{
  display: flex;
  flex: 0 0 35rpx;
  justify-content: center;
  align-items: center;
}

.login-container .input-area .image image{
  width: 35rpx;
  height: 35rpx;
}

.login-container .input-area input{
  flex: 1;
  margin-left: 20rpx;
  font-size: 32rpx;
  color:#2D2C30
}

#loginBtn {
  margin-top: 40rpx;
  width: 692rpx;
  height: 73rpx;
  line-height: 73rpx;
  font-size: 27rpx;
  border-radius: 37rpx;
  background-color: #AF3E37;
}
.findPwd{
  font-size: 30rpx;
  color: gray;
  margin-top: 15rpx;
  display: flex;
  flex-direction: row-reverse;
  margin-right: 30rpx;
}
